# CoinKrazy.com Environment Configuration

# Database (Neon)
DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require

# App Configuration
VITE_APP_NAME=CoinKrazy
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3001

# Authentication
JWT_SECRET=coinkrazy_jwt_secret_key_change_in_production
SESSION_SECRET=coinkrazy_session_secret_change_in_production

# Email Service (for welcome emails and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@coinkrazy.com

# Payment Processing (for Gold Coin purchases)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# External Game Providers (if using real slots APIs)
PRAGMATIC_API_KEY=your_pragmatic_api_key
NETENT_API_KEY=your_netent_api_key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# Development Settings
NODE_ENV=development
DEBUG=true
